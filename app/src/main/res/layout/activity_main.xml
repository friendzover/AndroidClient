<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
>

    <Button
            android:text="@string/friends_are_coming"
            android:layout_width="254dp"
            android:layout_height="41dp"
            android:id="@+id/button"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/mainViewPager" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <com.nshmura.recyclertablayout.RecyclerTabLayout
            android:layout_width="163dp"
            android:layout_height="29dp"
            android:id="@+id/mainTabs"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp">
    </com.nshmura.recyclertablayout.RecyclerTabLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="389dp"
            android:layout_height="570dp"
            android:id="@+id/mainViewPager"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTabs" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>