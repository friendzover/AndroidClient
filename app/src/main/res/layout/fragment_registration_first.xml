<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.registration_first">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners">
        <TextView
                android:text="ensure non of your data is lost by making an account"
                android:layout_width="267dp"
                android:layout_height="49dp"
                android:id="@+id/textView2" android:textColor="#000000"
                android:fontFamily="serif" android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Make an account!"
                android:layout_width="356dp"
                android:layout_height="29dp"
                android:id="@+id/textView3" android:textColor="#000000"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="serif" android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
        <EditText
                android:layout_width="277dp"
                android:layout_height="42dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:id="@+id/repassword_textbox" android:hint="retype Password" android:textColor="#00000000"
                android:ellipsize="end"
                android:textColorHint="#868585" android:layout_marginEnd="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/password_textbox"/>

        <EditText
                android:layout_width="277dp"
                android:layout_height="42dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:id="@+id/password_textbox" android:hint="Password" android:textColor="#00000000"
                android:textColorHint="#868585" android:layout_marginStart="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/email_textbox"/>
        <EditText
                android:layout_width="277dp"
                android:layout_height="42dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:id="@+id/email_textbox" android:hint="Email" android:textColor="#00000000"
                android:textColorHint="#868585" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>