<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/constraintLayout">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recipeTitleTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textStyle="bold"
            android:textAlignment="center" android:fontFamily="serif"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_dashboard_black_24dp"
            android:id="@+id/recipeImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:contentDescription="Food"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintTop_toBottomOf="@+id/recipeTitleTextView" android:scaleType="fitCenter"
            android:adjustViewBounds="false" android:cropToPadding="false" app:layout_constraintDimensionRatio="16:9"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeImageView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>