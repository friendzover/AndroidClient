<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.registration_first">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners">
        <TextView
                android:text="Please enter your first and last name."
                android:layout_width="350dp"
                android:layout_height="28dp"
                android:id="@+id/textView2" android:textColor="#000000"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="serif" android:textSize="18sp"
                android:textAlignment="center" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Make your Account yours!"
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:id="@+id/textView5" android:textColor="#000000"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:fontFamily="serif" android:textSize="24sp"
                android:textAlignment="center" android:textStyle="bold"/>
        <EditText
                android:layout_width="272dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastNameTextBox"
                android:textColor="#000000" android:hint="Last Name" android:textColorHint="#80000000"
                android:background="@drawable/textview_border"
                android:paddingLeft="10dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/firstNameTextBox"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <EditText
                android:layout_width="272dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstNameTextBox"
                android:textColor="#000000" android:hint="First Name" android:textColorHint="#80000000"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/textview_border"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:singleLine="true"
                android:breakStrategy="simple"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>