<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".`LoginActivity.kt`">

    <ImageView
            android:layout_width="242dp"
            android:layout_height="239dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:contentDescription="Logo" tools:srcCompat="@drawable/logo" android:scaleType="fitCenter"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextBox" android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Email" android:textColor="#000000"
            android:textColorHint="#000000" android:textColorLink="#2196F3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextBox" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Password" android:textColorHint="#000000"
            android:textColorLink="#2196F3" android:textColor="#000000"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            app:layout_constraintStart_toStartOf="@+id/loginButton"
            android:background="#FFFFFF" android:textColor="#000000"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            app:layout_constraintEnd_toEndOf="@+id/loginButton" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FFFFFF" android:textColor="#000000"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBox" app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/loginButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/emailTextBox"
            app:layout_constraintStart_toStartOf="@+id/emailTextBox"
            app:layout_constraintEnd_toEndOf="@+id/emailTextBox" android:fontFamily="serif" android:textSize="18sp"
            android:textColor="#F70505" android:typeface="normal"/>
    <TextView
            android:text="Made with love at MakeSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/registerButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>