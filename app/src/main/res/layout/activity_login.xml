<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".activities.LoginActivity"
        android:id="@+id/view">

    <EditText
            android:layout_width="290dp"
            android:layout_height="75dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextBox"
            android:layout_marginStart="8dp"
            android:paddingLeft="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Email" android:textColor="#FEFFFFFF"
            android:textColorHint="#DEF2F1" android:textColorLink="#2196F3" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="75dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox" android:layout_marginTop="25dp"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextBox" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Password" android:textColorHint="#DEF2F1"
            android:textColorLink="#2196F3" android:textColor="#FEFFFFFF" android:textSize="24sp"/>
    <Button
            android:text="Register"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/registerButton"
            app:layout_constraintStart_toStartOf="@+id/loginButton"
            android:background="@drawable/rounded_corners" android:textColor="#17252A"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            app:layout_constraintEnd_toEndOf="@+id/loginButton" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"/>
    <Button
            android:text="Login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_corners" android:textColor="#17252A"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBox" app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/loginButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/emailTextBox"
            app:layout_constraintStart_toStartOf="@+id/emailTextBox"
            app:layout_constraintEnd_toEndOf="@+id/emailTextBox" android:fontFamily="serif" android:textSize="18sp"
            android:textColor="#F70505" android:typeface="normal"/>
    <TextView
            android:text="Made with ðŸ’™ at MakeSchool"
            android:layout_width="401dp"
            android:layout_height="45dp"
            android:id="@+id/textView4"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerButton" android:layout_marginTop="50dp"
            android:textColor="#DEF2F1"/>
    <TextView
            android:text="FrienZover"
            android:layout_width="383dp"
            android:layout_height="99dp"
            android:id="@+id/textView" android:textAlignment="center"
            android:textSize="70sp"
            android:textColor="#DEF2F1" android:fontFamily="serif"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>